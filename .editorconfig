root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,json,yml,yaml,css,scss,html,dart}]
indent_style = space
indent_size = 2

[*.{java,kt,kts,groovy,gradle}]
indent_style = space
indent_size = 4

[*.{py}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
