{
  "screen": "HomeWeddingPrep",
  "description": "Home dashboard for users in wedding preparation phase (예비부부)",
  "layout": {
    "background": "{color.background.primary}",
    "scrollable": true,
    "paddingTop": "{spacing.12}",
    "paddingBottom": "calc(56px + {spacing.6} + env(safe-area-inset-bottom))"
  },
  "sections": [
    {
      "id": "header",
      "layout": {
        "padding": "{spacing.4} {spacing.6}",
        "display": "flex",
        "justifyContent": "space-between",
        "alignItems": "center"
      },
      "elements": {
        "greeting": {
          "text": "{userName}님, 안녕하세요!",
          "typography": "{typography.h3}",
          "color": "{color.neutral.900}"
        },
        "actions": {
          "display": "flex",
          "gap": "{spacing.3}",
          "items": [
            { "icon": "notification", "size": "24px", "badge": "dot when unread" },
            { "icon": "settings", "size": "24px" }
          ]
        }
      }
    },
    {
      "id": "dday-widget",
      "layout": {
        "padding": "0 {spacing.6}",
        "marginBottom": "{spacing.6}"
      },
      "card": {
        "variant": "elevated",
        "borderRadius": "{borderRadius.xl}",
        "padding": "{spacing.6}",
        "background": "linear-gradient(135deg, {color.primary.500}, {color.accent.400})",
        "color": "#FFFFFF"
      },
      "elements": {
        "graphic": {
          "type": "heart-ring",
          "description": "Heart-shaped graphic or intertwined ring icon in white/semi-transparent",
          "size": "64px",
          "position": "left",
          "opacity": 0.9
        },
        "label": {
          "text": "우리의 결혼식까지",
          "typography": "{typography.body2}",
          "color": "rgba(255, 255, 255, 0.85)"
        },
        "countdown": {
          "text": "D-{days}",
          "typography": "{typography.display}",
          "color": "#FFFFFF",
          "fontWeight": "{typography.fontWeight.bold}"
        },
        "date": {
          "text": "{weddingDate}",
          "typography": "{typography.caption}",
          "color": "rgba(255, 255, 255, 0.7)",
          "marginTop": "{spacing.1}"
        }
      }
    },
    {
      "id": "progress-ring",
      "layout": {
        "padding": "0 {spacing.6}",
        "marginBottom": "{spacing.6}"
      },
      "card": {
        "variant": "elevated",
        "borderRadius": "{borderRadius.xl}",
        "padding": "{spacing.5}",
        "display": "flex",
        "alignItems": "center",
        "gap": "{spacing.4}"
      },
      "elements": {
        "ring": {
          "type": "circular-progress",
          "size": "72px",
          "strokeWidth": "6px",
          "trackColor": "{color.neutral.100}",
          "progressColor": "{color.primary.500}",
          "centerText": {
            "value": "{percentage}%",
            "typography": "{typography.h4}",
            "color": "{color.primary.500}"
          }
        },
        "details": {
          "title": {
            "text": "체크리스트 진행률",
            "typography": "{typography.h4}",
            "color": "{color.neutral.900}"
          },
          "subtitle": {
            "text": "{completedCount}/{totalCount}개 완료",
            "typography": "{typography.body2}",
            "color": "{color.neutral.500}",
            "marginTop": "{spacing.1}"
          }
        },
        "chevron": {
          "icon": "chevron-right",
          "size": "20px",
          "color": "{color.neutral.400}",
          "marginLeft": "auto"
        }
      }
    },
    {
      "id": "todays-tasks",
      "layout": {
        "padding": "0 {spacing.6}",
        "marginBottom": "{spacing.6}"
      },
      "header": {
        "display": "flex",
        "justifyContent": "space-between",
        "alignItems": "center",
        "marginBottom": "{spacing.3}",
        "title": {
          "text": "오늘의 할 일",
          "typography": "{typography.h4}",
          "color": "{color.neutral.900}"
        },
        "viewAll": {
          "text": "전체보기",
          "typography": "{typography.body2}",
          "color": "{color.primary.500}"
        }
      },
      "list": {
        "maxItems": 3,
        "gap": "{spacing.2}",
        "item": {
          "display": "flex",
          "alignItems": "center",
          "gap": "{spacing.3}",
          "padding": "{spacing.3} {spacing.4}",
          "background": "#FFFFFF",
          "borderRadius": "{borderRadius.lg}",
          "boxShadow": "{shadow.sm}",
          "elements": {
            "checkbox": {
              "size": "22px",
              "borderRadius": "{borderRadius.full}",
              "border": "2px solid {color.neutral.300}",
              "checkedBackground": "{color.primary.500}",
              "checkedIcon": "check (white, 14px)"
            },
            "text": {
              "typography": "{typography.body2}",
              "color": "{color.neutral.900}",
              "completedStyle": {
                "textDecoration": "line-through",
                "color": "{color.neutral.400}"
              }
            },
            "dueTag": {
              "optional": true,
              "typography": "{typography.caption}",
              "color": "{color.semantic.warning}",
              "marginLeft": "auto"
            }
          }
        }
      },
      "emptyState": {
        "text": "오늘 할 일을 모두 완료했어요!",
        "typography": "{typography.body2}",
        "color": "{color.neutral.400}",
        "icon": "check-circle",
        "iconColor": "{color.semantic.success}",
        "padding": "{spacing.6}",
        "textAlign": "center"
      }
    },
    {
      "id": "budget-summary",
      "layout": {
        "padding": "0 {spacing.6}",
        "marginBottom": "{spacing.6}"
      },
      "card": {
        "variant": "elevated",
        "borderRadius": "{borderRadius.xl}",
        "padding": "{spacing.5}"
      },
      "elements": {
        "header": {
          "display": "flex",
          "justifyContent": "space-between",
          "alignItems": "center",
          "marginBottom": "{spacing.4}",
          "title": {
            "text": "예산 요약",
            "typography": "{typography.h4}",
            "color": "{color.neutral.900}"
          },
          "chevron": {
            "icon": "chevron-right",
            "size": "20px",
            "color": "{color.neutral.400}"
          }
        },
        "totalBudget": {
          "label": {
            "text": "총 예산",
            "typography": "{typography.caption}",
            "color": "{color.neutral.500}"
          },
          "value": {
            "text": "{totalBudget}원",
            "typography": "{typography.h3}",
            "color": "{color.neutral.900}"
          }
        },
        "progressBar": {
          "height": "8px",
          "borderRadius": "{borderRadius.full}",
          "trackColor": "{color.neutral.100}",
          "fillColor": "{color.primary.500}",
          "overBudgetColor": "{color.semantic.error}",
          "marginTop": "{spacing.3}",
          "marginBottom": "{spacing.2}"
        },
        "breakdown": {
          "display": "flex",
          "justifyContent": "space-between",
          "spent": {
            "label": "사용",
            "typography": "{typography.caption}",
            "valueColor": "{color.neutral.900}"
          },
          "remaining": {
            "label": "남은 예산",
            "typography": "{typography.caption}",
            "valueColor": "{color.semantic.success}"
          }
        }
      }
    },
    {
      "id": "quick-actions",
      "layout": {
        "padding": "0 {spacing.6}",
        "marginBottom": "{spacing.6}"
      },
      "display": "flex",
      "gap": "{spacing.3}",
      "overflow": "scroll-x",
      "items": [
        {
          "icon": "checklist",
          "label": "체크리스트",
          "iconColor": "{color.primary.500}",
          "background": "{color.primary.50}",
          "borderRadius": "{borderRadius.lg}",
          "padding": "{spacing.3}",
          "width": "72px",
          "textAlign": "center"
        },
        {
          "icon": "budget",
          "label": "예산관리",
          "iconColor": "{color.accent.500}",
          "background": "{color.accent.50}",
          "borderRadius": "{borderRadius.lg}",
          "padding": "{spacing.3}",
          "width": "72px",
          "textAlign": "center"
        },
        {
          "icon": "calendar",
          "label": "일정",
          "iconColor": "{color.semantic.info}",
          "background": "#E3F2FD",
          "borderRadius": "{borderRadius.lg}",
          "padding": "{spacing.3}",
          "width": "72px",
          "textAlign": "center"
        },
        {
          "icon": "venue",
          "label": "웨딩홀",
          "iconColor": "{color.semantic.success}",
          "background": "#E8F5E9",
          "borderRadius": "{borderRadius.lg}",
          "padding": "{spacing.3}",
          "width": "72px",
          "textAlign": "center"
        },
        {
          "icon": "guest",
          "label": "하객관리",
          "iconColor": "{color.semantic.warning}",
          "background": "#FFF3E0",
          "borderRadius": "{borderRadius.lg}",
          "padding": "{spacing.3}",
          "width": "72px",
          "textAlign": "center"
        }
      ],
      "labelTypography": "{typography.caption}",
      "labelColor": "{color.neutral.700}",
      "iconSize": "24px"
    }
  ]
}
