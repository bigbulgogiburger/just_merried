# ========================================
# WeddingMate - Environment Variables
# ========================================
# Copy this file to .env and fill in values
# cp .env.example .env

# ----------------------------------------
# Database (PostgreSQL)
# ----------------------------------------
DB_HOST=localhost
DB_PORT=5433
DB_NAME=weddingmate_dev
DB_USERNAME=weddingmate
DB_PASSWORD=weddingmate_local

# ----------------------------------------
# Redis
# ----------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379

# ----------------------------------------
# Elasticsearch
# ----------------------------------------
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# ----------------------------------------
# Kafka
# ----------------------------------------
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ----------------------------------------
# JWT
# ----------------------------------------
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRATION=3600000

# ----------------------------------------
# OAuth 2.0 (Kakao)
# ----------------------------------------
KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_CLIENT_SECRET=your-kakao-client-secret
KAKAO_REDIRECT_URI=http://localhost:3000/auth/kakao/callback

# ----------------------------------------
# OAuth 2.0 (Naver)
# ----------------------------------------
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret
NAVER_REDIRECT_URI=http://localhost:3000/auth/naver/callback

# ----------------------------------------
# OAuth 2.0 (Google)
# ----------------------------------------
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# ----------------------------------------
# AWS S3 (Media Storage)
# ----------------------------------------
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_MEDIA=weddingmate-media-dev
S3_BUCKET_STATIC=weddingmate-static-dev

# ----------------------------------------
# Frontend
# ----------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8082/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8082/ws

# ----------------------------------------
# Application
# ----------------------------------------
SPRING_PROFILES_ACTIVE=local
NODE_ENV=development
